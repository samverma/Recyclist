<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/facName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ltblue"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Facility: " />
        <TextView
            android:id="@+id/facilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_dark"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="fac_name" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/facStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/ltblue"
            android:text="Address: " />
        <TextView
            android:id="@+id/facilityStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_dark"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="fac_street" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/facCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/ltblue"
            android:text="City: " />
        <TextView
            android:id="@+id/facilityCity"
            android:layout_width="wrap_content"
            android:textColor="@color/primary_dark"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_height="wrap_content"
            android:text="fac_city" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/facState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ltblue"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="State: " />
        <TextView
            android:id="@+id/facilityState"
            android:layout_width="wrap_content"
            android:textColor="@color/primary_dark"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_height="wrap_content"
            android:text="fac_state" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/facZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/ltblue"
            android:text="Zip: " />
        <TextView
            android:id="@+id/facilityZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/primary_dark"
            android:text="fac_zip" />
    </LinearLayout>
</LinearLayout>